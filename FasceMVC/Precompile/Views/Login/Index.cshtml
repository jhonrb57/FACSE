@model FasceMVC.Models.Login
@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
    ViewBag.LetraBoton = "Inicio";
    ViewBag.ImagenBoton = "~/Content/Images/homa.png";
    ViewBag.RutaBoton = "Inicio";
}


<div class="container">
    <div class="row">
        <div class="col-lg-12 text-center">
            <div class="container">
                <div class="row">
                    <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
                        <div class="card card-signin my-5">
                            <div class="card-body">
                                <h5 class="card-title text-center">Login</h5>
                                @using (Html.BeginForm())
                                {
                                    @Html.AntiForgeryToken()

                                    <div class="form-label-group">
                                        <label class="text-danger">@ViewBag.Mensaje</label>
                                        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-label-group">

                                        @Html.EditorFor(model => Model.Usuario, new { htmlAttributes = new { @class = "form-control", placeholder = "Usuario", autofocus = true } })
                                        @Html.ValidationMessageFor(model => model.Usuario, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="form-label-group">

                                        @Html.EditorFor(model => Model.Contrasena, new { htmlAttributes = new { @class = "form-control", placeholder = "Contraseña" } })
                                        @Html.ValidationMessageFor(model => model.Contrasena, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="custom-control custom-checkbox mb-3">
                                        <input type="checkbox" class="custom-control-input" id="customCheck1">
                                        <label class="custom-control-label" for="customCheck1">Recordar Contraseña </label>
                                    </div>
                                    <input class="btn btn-sm btn-success btn-block text-uppercase" value="Ingresar" type="submit" />
                                    <hr class="my-4">

                                }
                                <div class="flex-col-c p-t-170 p-b-40">
                                    <span style="font-size:small">
                                        Protegido con un Certificado Digital SSL https://.
                                    </span>
                                    <br />
                                    <a href="#" class="txt3">
                                        | Política de Privacidad |
                                    </a>
                                    <a href="#" class="txt3">
                                        Términos de Servicio y Condiciones de Uso |
                                    </a>
                                </div>
                                <hr />

                                <h5 class="card-title text-center">Certificados por:</h5>

                                <img src="~/Content/Images/dian.png" />

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>