@model DataBase.adm_emisor_catalogo
@{
    /**/

    Layout = null;
}
@Scripts.Render("~/bundles/modernizr")
@Styles.Render("~/Content/bootstrap.css")
@Styles.Render("~/Content/css/inicio.css")

@Styles.Render("~/Content/pace-theme-mac-osx.css")
@Scripts.Render("~/bundles/jquery")


@using (Ajax.BeginForm("CrearCatalogo", new AjaxOptions()
{
    InsertionMode = InsertionMode.Replace,
    OnSuccess = "onSuccessCatalogo(data,this)"
}))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.eca_emisor)

    <div class="card mb-3 fondopciones">
        <div style="color:#ffffff" class="card-header amarillo">
            <i class="fas fa-chart-area"></i>
            Adicionar Catalogo
        </div>
        <div class="card-body">
            <div>

                <div class="form-group col-md-12">
                    <div class="wrap-input2 validate-input" data-validate="Name is required">

                        @Html.LabelFor(model => model.eca_nombre, htmlAttributes: new { @class = "inputState" })

                        @Html.EditorFor(model => model.eca_nombre, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.eca_nombre, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group col-md-12">
                        @Html.LabelFor(model => model.eca_tipo_dato, htmlAttributes: new { @class = "inputState" })

                        @Html.DropDownList("eca_tipo_dato", null, "--Seleccione--", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.eca_tipo_dato, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group col-md-12">
                        @Html.LabelFor(model => model.eca_tipo_catalogo, htmlAttributes: new { @class = "inputState" })

                        @Html.DropDownList("eca_tipo_catalogo", null, "--Seleccione--", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.eca_tipo_catalogo, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <div class="wrap-input2 validate-input" data-validate="Name is required">
                            @Html.LabelFor(model => model.eca_lista, htmlAttributes: new { @class = "" })

                            @Html.EditorFor(model => model.eca_lista, new { htmlAttributes = new { @class = "" } })
                            @Html.ValidationMessageFor(model => model.eca_lista, "", new { @class = "" })
                        </div>

                    </div>
                    <div class="form-group col-md-12">
                        <button type="submit" class="btn btn-primary">Crear</button>

                        <a class="btn btn-danger" style="color:white; cursor:pointer" onclick="cancelarCatalogo()" role="button" aria-expanded="false" aria-controls="collapseExample">
                            Cancelar
                        </a>
                    </div>
                </div>
                </div>
            </div>
        </div>
                }
