@model DataBase.adm_emisor_correo
@{
    /**/

    Layout = null;
}
@Scripts.Render("~/bundles/modernizr")
@Styles.Render("~/Content/bootstrap.css")
@Styles.Render("~/Content/css/inicio.css")

@Styles.Render("~/Content/pace-theme-mac-osx.css")
@Scripts.Render("~/bundles/jquery")


@using (Ajax.BeginForm("CrearCorreo", new AjaxOptions()
{
    InsertionMode = InsertionMode.Replace,
    OnSuccess = "onSuccessCatalogo(data,this)"
}))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.eco_emisor)
    <br />
    <div class="card mb-3 fondopciones">
        <div style="color:#ffffff" class="card-header amarillo">
            <i class="fas fa-chart-area"></i>
            Adicionar Correo
        </div>
        <div class="card-body">
            <div>
                <div class="form-group col-md-12">
                    <div class="form-group col-md-12">
                        @Html.LabelFor(model => model.eco_tipo_correo, htmlAttributes: new { @class = "inputState" })

                        @Html.DropDownList("eco_tipo_correo", null, "--Seleccione--", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.eco_tipo_correo, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group col-md-12">
                        @Html.LabelFor(model => model.eco_nombre, htmlAttributes: new { @class = "inputState" })

                        @Html.EditorFor(model => model.eco_nombre, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.eco_nombre, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group col-md-12">
                        @Html.LabelFor(model => model.eco_servidor, htmlAttributes: new { @class = "inputState" })

                        @Html.EditorFor(model => model.eco_servidor, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.eco_servidor, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group col-md-12">
                        @Html.LabelFor(model => model.eco_puerto, htmlAttributes: new { @class = "inputState" })

                        @Html.EditorFor(model => model.eco_puerto, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.eco_puerto, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group col-md-12">
                        @Html.LabelFor(model => model.eco_usuario, htmlAttributes: new { @class = "inputState" })

                        @Html.EditorFor(model => model.eco_usuario, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.eco_usuario, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group col-md-12">
                        @Html.LabelFor(model => model.eco_contrasena, htmlAttributes: new { @class = "inputState" })

                        @Html.EditorFor(model => model.eco_contrasena, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.eco_contrasena, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group col-md-12">
                        @Html.LabelFor(model => model.eco_correo, htmlAttributes: new { @class = "inputState" })

                        @Html.EditorFor(model => model.eco_correo, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.eco_correo, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group col-md-12">
                        @Html.LabelFor(model => model.eco_ssl, htmlAttributes: new { @class = "inputState" })

                        @Html.EditorFor(model => model.eco_ssl, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.eco_ssl, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group col-md-12">
                        @*@Html.LabelFor(model => model.eco_correo_html, htmlAttributes: new { @class = "inputState" })*@

                        @Html.EditorFor(model => model.eco_correo_html, new { htmlAttributes = new { @class = "form-control", Value = "No aplica", style = "display:none" } })
                        @Html.ValidationMessageFor(model => model.eco_correo_html, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group col-md-12">
                        @Html.LabelFor(model => model.eco_activo, htmlAttributes: new { @class = "" })

                        @Html.EditorFor(model => model.eco_activo, new { htmlAttributes = new { @class = "" } })
                        @Html.ValidationMessageFor(model => model.eco_activo, "", new { @class = "" })
                    </div>
                    <div class="form-group col-md-12">
                        <button type="submit" class="btn btn-primary">Crear</button>

                        <a class="btn btn-danger" style="color:white; cursor:pointer" onclick="cancelarCatalogo()" role="button" aria-expanded="false" aria-controls="collapseExample">
                            Cancelar
                        </a>
                    </div>
                </div>

            </div>
        </div>
    </div>

}
