@model DataBase.adm_emisor_notificacion
@{
    /**/

    Layout = null;
}
@Scripts.Render("~/bundles/modernizr")
@Styles.Render("~/Content/bootstrap.css")
@Styles.Render("~/Content/css/inicio.css")

@Styles.Render("~/Content/pace-theme-mac-osx.css")
@Scripts.Render("~/bundles/jquery")


@using (Ajax.BeginForm("CrearNotificacion", new AjaxOptions()
{
    InsertionMode = InsertionMode.Replace,
    OnSuccess = "onSuccessCatalogo(data,this)"
}))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.eno_id_emisor)


    <div class="form-group col-md-12">
        <div class="form-group col-md-12">
            @Html.LabelFor(model => model.eno_id_tipo_notificacion, htmlAttributes: new { @class = "inputState" })

            @Html.DropDownList("eno_id_tipo_notificacion", null, "--Seleccione--", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.eno_id_tipo_notificacion, "", new { @class = "text-danger" })
        </div>
        <div class="form-group col-md-12">
            @Html.LabelFor(model => model.eno_descripcion, htmlAttributes: new { @class = "inputState" })

            @Html.EditorFor(model => model.eno_descripcion, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.eno_descripcion, "", new { @class = "text-danger" })
        </div>
        <div class="form-group col-md-12">
            @Html.LabelFor(model => model.eno_fecha, htmlAttributes: new { @class = "inputState" })

            @Html.EditorFor(model => model.eno_fecha, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.eno_fecha, "", new { @class = "text-danger" })
        </div>
        <div class="form-group col-md-12">
            @Html.LabelFor(model => model.eno_leido, htmlAttributes: new { @class = "inputState" })

            @Html.EditorFor(model => model.eno_leido, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.eno_leido, "", new { @class = "text-danger" })
        </div>
        <div class="form-group col-md-12">
            <button type="submit" class="btn btn-primary">Crear</button>

            <a class="btn btn-danger" style="color:white; cursor:pointer" onclick="cancelarCatalogo()" role="button" aria-expanded="false" aria-controls="collapseExample">
                Cancelar
            </a>
        </div>
    </div>
}